---
import Layout from '../components/Layout/Layout.astro';
import { getAllPosts } from '../data-loading/getAllPosts';
import { formatDate } from '../formatting/formatDate';
const posts = await getAllPosts();
---

<style>
  .resume {
    text-decoration: underline;
  }

  .big {
    font-size: 1.4em;
    padding: 1.2em;
  }
  .center {
    text-align: center;
  }

  blockquote {
    font-size: 0.8em;
    padding-top: 0.2em;
    padding-bottom: 0.4em;
  }
  .post-title {
    margin: 0;
    font-size: 1.4em;
    text-decoration: none !important;
  }
  .date {
    filter: brightness(350%);
    font-size: 0.9em;
    margin: 0.2em 0 0.4em 0;
  }
  .description {
    font-size: 0.9em;
    margin: 0;
  }
</style>

<Layout
  title="About"
  description="About page for Jon Kurinsky's developer blog"
>
  <div class="box center big">
    <p>
      I'm <strong>Jon Kurinsky</strong>, a Philadelphia-based software engineer.
    </p>
    <blockquote>
      ⭐️ I'm currently on the job market! <a
        class="resume"
        href="Jon_Kurinsky.pdf"
        target="_blank"
        rel="noopener noreferrer">Here is my resume.</a
      > ⭐️
    </blockquote>
  </div>

  <ul>
    {
      posts.map(({ frontmatter: { title, pubDate, description, slug } }) => {
        return (
          <li class="box">
            <h2 class="post-title">
              <a href={`posts/${slug}`}>{title}</a>
            </h2>
            <p class="date">{formatDate(pubDate)}</p>
            <p class="description">{description}</p>
          </li>
        );
      })
    }
  </ul>
</Layout>
