---
import './reset.css';
import './globals.css';
import Navbar from './Navbar/Navbar.astro';
import Head from './Head/Head.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Head title={title} />

<style>
  .main {
    display: flex;
    justify-content: center;
  }
  .main-inner {
    max-width: 680px;
  }
</style>
<div class="main">
  <div class="main-inner">
    <Navbar />

    <slot />
  </div>
</div>
